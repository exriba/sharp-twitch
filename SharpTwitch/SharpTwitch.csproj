<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageOutputPath>$(SolutionDir)\packages\$(MSBuildProjectName.toLower())</PackageOutputPath>
    <Company>$(Authors)$(Version)</Company>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\SharpTwitch.Auth\SharpTwitch.Auth.csproj" />
    <ProjectReference Include="..\SharpTwitch.Helix\SharpTwitch.Helix.csproj" />
  </ItemGroup>

</Project>
